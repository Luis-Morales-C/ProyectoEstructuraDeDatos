<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Proceso.Controllers.SettingsViewController">
   <children>
      <BorderPane prefHeight="400.0" prefWidth="600.0">
         <top>
            <AnchorPane prefHeight="72.0" prefWidth="600.0" style="-fx-background-color: #b7ffdc;" BorderPane.alignment="CENTER">
               <children>
                  <Label layoutX="33.0" layoutY="24.0" text="SETTINGS">
                     <font>
                        <Font name="Microsoft YaHei Bold" size="18.0" />
                     </font>
                  </Label>
                  <ImageView fitHeight="34.0" fitWidth="34.0" layoutX="504.0" layoutY="19.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../Media/vectorUsuario.png" />
                     </image>
                  </ImageView>
               </children>
            </AnchorPane>
         </top>
         <center>
            <AnchorPane prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: #ffffff;" BorderPane.alignment="CENTER">
               <children>
                  <Label layoutX="215.0" layoutY="14.0" text="AUTHENTICATION" textFill="#097c3d">
                     <font>
                        <Font name="Microsoft YaHei Bold" size="18.0" />
                     </font>
                  </Label>
                  <Label alignment="CENTER" layoutX="58.0" layoutY="38.0" prefHeight="47.0" prefWidth="483.0" text="At this time it is necessary that you enter your data again to verify that it is really you. :)" textAlignment="CENTER">
                     <font>
                        <Font name="Agency FB Bold" size="15.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtNameSettings" alignment="CENTER" layoutX="129.0" layoutY="85.0" promptText="name" style="-fx-background-color: transpare; -fx-border-color: #097c3d; -fx-border-width: 0px 0px 2;" />
                  <Label layoutX="69.0" layoutY="90.0" text="Name:" textFill="#097c3d">
                     <font>
                        <Font name="Microsoft YaHei Bold" size="13.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtMailSettings" alignment="CENTER" layoutX="389.0" layoutY="85.0" promptText="mail" style="-fx-background-color: transpare; -fx-border-color: #097c3d; -fx-border-width: 0px 0px 2;" />
                  <Label layoutX="335.0" layoutY="90.0" text="Mail:" textFill="#097c3d">
                     <font>
                        <Font name="Microsoft YaHei Bold" size="13.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtPasswordSettings" alignment="CENTER" layoutX="129.0" layoutY="136.0" promptText="password" style="-fx-background-color: transpare; -fx-border-color: #097c3d; -fx-border-width: 0px 0px 2;" />
                  <Label layoutX="58.0" layoutY="141.0" text="Password:" textFill="#097c3d">
                     <font>
                        <Font name="Microsoft YaHei Bold" size="13.0" />
                     </font>
                  </Label>
                  <ComboBox fx:id="comboBoxUserTypeSettings" layoutX="349.0" layoutY="137.0" prefHeight="26.0" prefWidth="189.0" promptText="User type" style="-fx-background-color: #b7ffdc; -fx-background-radius: 5;" />
                  <ComboBox fx:id="comoBoxNotificationTypeSettings" layoutX="205.0" layoutY="225.0" prefHeight="26.0" prefWidth="189.0" promptText="Notification type" style="-fx-background-color: #b7ffdc; -fx-background-radius: 5;" />
                  <Label alignment="CENTER" layoutX="58.0" layoutY="178.0" prefHeight="47.0" prefWidth="483.0" text="Choose what type of notification you prefer." textAlignment="CENTER">
                     <font>
                        <Font name="Agency FB Bold" size="15.0" />
                     </font>
                  </Label>
                  <Button fx:id="btnSaveSettings" layoutX="65.0" layoutY="276.0" mnemonicParsing="false" onAction="#clickedSaveSettings" style="-fx-background-color: #097c3d; -fx-background-radius: 5;" text="SAVE" textFill="WHITE">
                     <font>
                        <Font name="Microsoft YaHei Bold" size="13.0" />
                     </font>
                  </Button>
                  <ImageView fx:id="backSettings" fitHeight="41.0" fitWidth="44.0" layoutX="498.0" layoutY="269.0" onMouseClicked="#backSettingsAction" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../Media/vectorFlecha.png" />
                     </image>
                  </ImageView>
               </children>
            </AnchorPane>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
